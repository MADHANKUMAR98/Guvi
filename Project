package presentation;

import pojo.Customer;
import service.CustomerService;
import service.CustomerServiceImpl;

import java.util.Scanner;
import java.util.UUID;

public class Presentation {

    private CustomerService customerService = new CustomerServiceImpl();
    private boolean isAdmin = false;
    private boolean isRegistered = false;
    private boolean isLoggedIn = false;

    public void present() {
        Scanner scan = new Scanner(System.in);

        while (true) {
            System.out.println("----------------------------");
            if (!isRegistered && !isAdmin) {
                System.out.println("| 1. Register as Customer  |");
            }
            if (!isLoggedIn) {
                System.out.println("| 2. Login                 |");
            }
            if (isLoggedIn) {
                if (isAdmin) {
                    System.out.println("| 3. Add Customer          |");
                    System.out.println("| 4. View All Customers    |");
                    System.out.println("| 5. Edit Customer         |");
                    System.out.println("| 6. Delete Customer       |");
                    System.out.println("| 7. View Pending Bills    |");
                } else {
                    System.out.println("| 3. Record Electricity Usage |");
                    System.out.println("| 4. Generate Monthly Bill |");
                    System.out.println("| 5. View Bill History     |");
                    System.out.println("| 6. Make a Payment        |");
                    System.out.println("| 7. View Payment History  |");
                }
                System.out.println("| 8. Logout                |");
            }
            System.out.println("| 9. Exit                  |");
            System.out.println("----------------------------");

            System.out.print("Enter your option: ");
            int option = scan.nextInt();
            scan.nextLine();

            switch (option) {
                case 1:
                    if (!isRegistered && !isAdmin) {
                        // Customer Registration
                        System.out.print("Enter name: ");
                        String name = scan.nextLine();
                        System.out.print("Enter address: ");
                        String address = scan.nextLine();
                        System.out.print("Enter meter number: ");
                        String meterNumber = scan.nextLine();
                        System.out.print("Enter password: ");
                        String password = scan.nextLine();

                        UUID uuid = UUID.randomUUID();
                        String base36Id = uuid.toString().replaceAll("-", "").toUpperCase();
                        String id = base36Id.substring(0, 8);

                        Customer newCustomer = new Customer(id, name, address, meterNumber, password);
                        customerService.addCustomer(newCustomer);
                        isRegistered = true;

                        System.out.println("Customer registered with ID: " + id);
                    } else {
                        System.out.println("You have already registered.");
                    }
                    break;

                case 2:
                    if (!isLoggedIn) {
                        // Login for both Admin and Customer
                        System.out.print("Enter ID (Admin ID is 'admin1'): ");
                        String loginId = scan.nextLine();
                        System.out.print("Enter password: ");
                        String loginPassword = scan.nextLine();

                        if (loginId.equals("admin1") && loginPassword.equals("1234")) {
                            isAdmin = true;
                            isLoggedIn = true;
                            System.out.println("Admin login successful.");
                        } else {
                            Customer customer = customerService.fetchCustomer(loginId);
                            if (customer != null && customer.getPassword().equals(loginPassword)) {
                                isLoggedIn = true;
                                isAdmin = false;
                                System.out.println("Customer login successful.");
                            } else {
                                System.out.println("Invalid credentials.");
                            }
                        }
                    } else {
                        System.out.println("You are already logged in.");
                    }
                    break;

                case 3:
                    if (isLoggedIn && isAdmin) {
                        // Add Customer (Admin only)
                        System.out.print("Enter name: ");
                        String name = scan.nextLine();
                        System.out.print("Enter address: ");
                        String address = scan.nextLine();
                        System.out.print("Enter meter number: ");
                        String meterNumber = scan.nextLine();
                        System.out.print("Enter password: ");
                        String password = scan.nextLine();

                        UUID uuid = UUID.randomUUID();
                        String base36Id = uuid.toString().replaceAll("-", "").toUpperCase();
                        String id = base36Id.substring(0, 8);

                        Customer newCustomer = new Customer(id, name, address, meterNumber, password);
                        customerService.addCustomer(newCustomer);

                        System.out.println("Customer added with ID: " + id);
                    } else if (isLoggedIn) {
                        // Record Electricity Usage (Customer only)
                        System.out.print("Enter month (e.g., '2024-08'): ");
                        String month = scan.nextLine();
                        System.out.print("Enter electricity usage (in kWh): ");
                        int usageInKwh = scan.nextInt();
                        scan.nextLine();  // Consume newline

                        Customer loggedCustomer = customerService.fetchCustomer(loginId);
                        if (loggedCustomer != null) {
                            loggedCustomer.addUsage(month, usageInKwh);
                            customerService.updateCustomer(loggedCustomer);

                            System.out.println("Electricity usage recorded.");
                        } else {
                            System.out.println("Customer not found.");
                        }
                    } else {
                        System.out.println("You need to log in first.");
                    }
                    break;

                // Other cases for Admin and Customer functionalities

                case 8:
                    if (isLoggedIn) {
                        isLoggedIn = false;
                        isAdmin = false;
                        System.out.println("Logged out successfully.");
                    } else {
                        System.out.println("You are not logged in.");
                    }
                    break;

                case 9:
                    System.out.println("Exiting...");
                    scan.close();
                    return;

                default:
                    System.out.println("Invalid option. Please try again.");
                    break;
            }
        }
    }
}
