import java.util.Base64;
import java.util.UUID;

public class ShortIDGenerator {
    public static String generateShortId() {
        UUID uuid = UUID.randomUUID();
        // Get the byte array of the UUID
        byte[] bytes = new byte[16];
        ByteBuffer.wrap(bytes).putLong(uuid.getMostSigBits()).putLong(uuid.getLeastSigBits());
        // Encode the byte array in Base64
        String base64 = Base64.getUrlEncoder().withoutPadding().encodeToString(bytes);
        // Return a shorter version
        return base64.substring(0, 8); // Adjust length as needed
    }
}
